    "type": "module",
    "main": "src/index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev dotenv -e .env.development nodemon",
        "start": "cross-env NODE_ENV=prod dotenv -e .env.production node src/index.js",
        "db:dev:migrate": "prisma migrate dev --schema=./prisma/schema.prisma --dotenv .env.development",
        "db:prod:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma --dotenv .env.production",
        "db:studio": "prisma studio --schema=./prisma/schema.prisma --dotenv .env.development"
    },
